{
  "name": "@lefun/ui",
  "version": "2.0.0",
  "description": "Main dependency for writing the UI of games at https://lefun.com.",
  "author": "Simon Lemieux",
  "repository": {
    "type": "git",
    "url": "https://github.com/lefun-fun/lefun",
    "directory": "packages/ui"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./lefunExtractor": {
      "import": "./dist/esm/lefunExtractor.js",
      "default": "./dist/esm/lefunExtractor.js",
      "types": "./dist/types/lefunExtractor.d.ts"
    }
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run compile",
    "clean": "rm -rf ./dist",
    "compile": "rollup --config",
    "watch": "rollup --config --watch",
    "format": "pnpm exec eslint . --fix",
    "check-format": "pnpm exec eslint . --quiet"
  },
  "dependencies": {
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@lefun/core": "workspace:*",
    "@lefun/game": "workspace:*",
    "@lingui/cli": "^4.11.2",
    "@lingui/macro": "^4.11.2",
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/node": "^20.14.10",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rollup": "^2.79.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "@lefun/core": "workspace:*",
    "@lefun/game": "workspace:*",
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2"
  }
}
