{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declarationDir": "dist/types",
    "jsx": "preserve",
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*", "lingui.config.ts"]
}
